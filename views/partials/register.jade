
.main(role='main')
        .container
          .row
            .col-md-12
              .featured-boxes
                .row
                  .col-sm-6
                    .featured-box.featured-box-primary.align-left.mt-xlg
                      .box-content
                        h4.heading-primary.text-uppercase.mb-md Log In
                        form#frmSignIn()
                          .row
                            .form-group
                              .col-md-12
                                label Username or E-mail Address

                                input.form-control.input-lg(type='text', value='')
                          .row
                            .form-group
                              .col-md-12
                                a.pull-right(href='#') (Lost Password?)
                                label Password
                                input.form-control.input-lg(type='password', value='')
                          .row
                            .col-md-6
                              span.remember-box.checkbox
                                label(for='rememberme')
                                  input#rememberme(type='checkbox', name='rememberme')
                                  | Remember Me
                            .col-md-6
                              input.btn.btn-primary.pull-right.mb-xl(type='submit', value='Login', data-loading-text='Loading...')
                  .col-sm-6
                    .featured-box.featured-box-primary.align-left.mt-xlg
                      .box-content
                        h4.heading-primary.text-uppercase.mb-md Register An Account
                        form#frmSignUp()
                          .row
                            .form-group
                              .col-md-12
                                label Name
                                input.form-control(ng-model="reg.username",name='name',type='text')
                          .row
                            .form-group
                              .col-md-12
                                label E-mail Address
                                input.form-control(ng-model="reg.email",name='email',type='text') 

                          
                          .row
                            .form-group
                              .col-md-6
                                label Password
                                input.form-control(ng-model="reg.password",name='password',type='password')
                              .col-md-6
                                label Re-enter Password
                                input.form-control(ng-model="reg.password2",name='password',type='password')
                            .alert.alert-warning(role="alert",ng-if="passMatch===false")
                              button.close(type="button", data-dismiss="alert")
                                span(aria-hidden="true") &times;
                                span.sr-only Close
                              strong PASSWORD DID NOT MATCH!
                          .row
                            .col-md-12
                              input.btn.btn-primary.pull-right.mb-xl(type='submit', ng-click='formSubmit(reg)')
      
